# Environment variables for R2R service
# These will be set automatically by Railway using service references

# R2R Server Configuration
R2R_HOST=0.0.0.0
R2R_PORT=7272
R2R_PROJECT_NAME=r2r_default

# PostgreSQL Configuration - Connection to Railway PostgreSQL Plugin
R2R_POSTGRES_HOST=${{Postgres.PGHOST}}
R2R_POSTGRES_PORT=${{Postgres.PGPORT}}
R2R_POSTGRES_USER=${{Postgres.PGUSER}}
R2R_POSTGRES_PASSWORD=${{Postgres.PGPASSWORD}}
R2R_POSTGRES_DBNAME=${{Postgres.PGDATABASE}}

# Vector Database Configuration - Qdrant
R2R_VECTOR_DB_PROVIDER=qdrant
R2R_QDRANT_HOST=qdrant.railway.internal
R2R_QDRANT_PORT=6333

# Redis Configuration - Connection to Railway Redis Plugin
REDIS_URL=${{Redis.REDIS_URL}}

# LiteLLM Configuration - Connection to LiteLLM Service
LITELLM_URL=http://litellm.railway.internal:4000

# Logging Configuration (optional)
R2R_LOG_LEVEL=INFO
