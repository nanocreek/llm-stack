# Environment variables for LiteLLM service
# These will be set automatically by Railway using service references

# LiteLLM Server Configuration
LITELLM_HOST=0.0.0.0
LITELLM_PORT=4000

# Master API Key for authentication
LITELLM_MASTER_KEY=your_secure_master_key_here

# PostgreSQL Configuration - Connection to Railway PostgreSQL Plugin
# Used for caching API calls and logging
DATABASE_URL=${{Postgres.DATABASE_URL}}

# Redis Configuration - Connection to Railway Redis Plugin
# Used for caching and rate limiting
REDIS_URL=${{Redis.REDIS_URL}}

# OpenAI Configuration
# OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Configuration
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Azure OpenAI Configuration
# AZURE_API_KEY=your_azure_api_key_here
# AZURE_API_BASE=https://your-resource-name.openai.azure.com/
# AZURE_API_VERSION=2024-02-15-preview

# Replicate Configuration
# REPLICATE_API_KEY=your_replicate_api_key_here

# Cohere Configuration
# COHERE_API_KEY=your_cohere_api_key_here

# Logging Configuration
LITELLM_LOG_LEVEL=INFO

# LiteLLM Server Settings
LITELLM_PROXY_BATCH_WRITE_AT=100
LITELLM_PROXY_TIMEOUT=300
